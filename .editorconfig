# EditorConfig is awesome: https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentação com 4 espaços para arquivos específicos
[*.astro]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4
