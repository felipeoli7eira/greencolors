---
import { Icon } from "astro-icon/components";
import SectionHeader from "../SectionHeader/SectionHeader.astro";

type TeamMember = {
    name: string;
    role: string;
    image: string;
    bio: string;
    linkedin: string;
};

const teamMembers: TeamMember[] = [
    {
        name: "Elizeu Viana",
        role: "CEO",
        image: "/img/team/elizeu.png",
        bio: "Especialista em Design Sustentável e Administração aplicada.",
        linkedin: "https://www.linkedin.com/in/elizeuviana",
    },
    {
        name: "José Soares",
        role: "COO",
        image: "/img/team/jose.png",
        bio: "Especialista em logística e Supply Chain.",
        linkedin: "https://www.linkedin.com/in/jos%C3%A9-soares-de-melo-0aa268222",
    },
    {
        name: "Felipe Oliveira",
        role: "CIO",
        image: "/img/team/felipe.png",
        bio: "Desenvolvedor de software com 6 anos de experiência",
        linkedin: "https://www.linkedin.com/in/felipeoli7eira",
    },
];
---

<section id="team" class="p-16">
    <SectionHeader title="Equipe" subtitle="Conheça nossa equipe" color="green-primary" />


    <div class="grid lg:grid-cols-3 lg:w-10/12 mx-auto gap-8 md:gap-0">
        {
            teamMembers.map((member: TeamMember) => (
                <div class="mx-auto flex flex-col justify-end gap-4 md:w-3/5 w-5/5">
                    <img src={member.image} alt={member.name} class="self-center place-self-start" />
                    <p class="m-0 text-primary font-normal text-3xl">{member.name}</p>
                    <p class="m-0 text-primary font-bold text-4xl">{member.role}</p>
                    <p class="m-0 text-primary font-normal text-base">{member.bio}</p>

                    <nav class="flex items-center">
                        <a href={member.linkedin} target="_blank" class="">
                            <Icon size={45} color="#0e3221" name="mdi:linkedin" />
                        </a>

                        <a href={member.linkedin} target="_blank" class="flex items-center bg-secondary p-2 gap-2 rounded-sm text-primary font-medium hover:bg-green-500 transition">
                            <span>Visualizar perfil</span>
                            <Icon size={20} name="mdi:arrow-right-thin" />
                        </a>
                    </nav>
                </div>
            ))
        }

    </div>
</section>
