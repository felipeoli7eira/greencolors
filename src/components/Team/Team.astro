---
import ButtonLink from "./ButtonLink.astro";

type TeamMember = {
  name: string;
  role: string;
  image: string;
  bio: string;
  linkedin: string;
};

const teamMembers: TeamMember[] = [
  {
    name: "Elizeu Viana",
    role: "CEO",
    image: "/img/team/elizeu.png",
    bio: "Especialista em Design Sustentável e Administração aplicada.",
    linkedin: "https://www.linkedin.com/in/elizeuviana",
  },
  {
    name: "José Soares",
    role: "COO",
    image: "/img/team/jose.png",
    bio: "Especialista em logística e Supply Chain.",
    linkedin: "https://www.linkedin.com/in/jos%C3%A9-soares-de-melo-0aa268222",
  },
  {
    name: "Felipe Oliveira",
    role: "CIO",
    image: "/img/team/felipe.png",
    bio: "Desenvolvedor de software com 6 anos de experiência",
    linkedin: "https://www.linkedin.com/in/felipeoli7eira",
  },
];
---

<section id="team-section" class="my-5 container-fluid">
  <div class="d-flex align-items-center justify-content-center justify-content-md-start gap-4 px-5 mb-5">
    <h4 class="h4 fw-700 m-0">Equipe</h4>

    <div class="pipe"></div>

    <h4 class="h4 fw-300 m-0">Conheça nossa equipe</h4>

    <div class="border justify-self-end flex-grow-1 d-none d-md-inline-block"></div>
  </div>

  <div class="container">
    <div class="row align-items-stretch">
      {
        teamMembers.map((member) => (
          <div class="col col-12 col-md-4 d-flex flex-column justify-content-between align-items-center mb-4 mb-md-0">
            <img src={member.image} alt={member.name} />

            <div class="w-50">
              <p class="m-0 h4 fw-500 green-primary">{member.name}</p>
              <p class="h4 fw-700 green-primary">{member.role}</p>
              <p class="fw-300 green-primary">{member.bio}</p>
            </div>

            <ButtonLink url={member.linkedin} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style lang="scss">
  .pipe {
    height: 20px;
    width: 3px;

    background-color: var(--green-primary);
  }
</style>
